<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >

<hibernate-mapping package="org.openmrs.module.muzima.model">

    <class name="MuzimaSetting" table="muzima_setting">
        <id name="id" type="java.lang.Integer" column="id" unsaved-value="0">
            <generator class="native"/>
        </id>
        <property name="property" type="java.lang.String" column="property" not-null="true" length="255"/>
        <property name="name" type="java.lang.String" column="name" length="255"/>
        <property name="description" type="java.lang.String" column="description" length="255"/>
        <property name="valueString" column="value_string" length="255"/>
        <property name="valueBoolean" column="value_boolean" />
        <property name="settingDataType" column="setting_data_type">
            <type name="org.hibernate.type.EnumType">
                <param name="enumClass">org.openmrs.module.muzima.model.MuzimaSettingDataType</param>
                <param name="type">12</param>
                <param name="useNamed">true</param>
            </type>
        </property>

        <many-to-one name="creator" class="org.openmrs.User" not-null="true">
            <column name="creator"/>
        </many-to-one>
        <property name="dateCreated" type="java.util.Date" column="date_created" not-null="true" length="19"/>

        <many-to-one name="changedBy" class="org.openmrs.User" column="changed_by"/>
        <property name="dateChanged" type="java.util.Date" column="date_changed" length="19"/>

        <many-to-one name="retiredBy" class="org.openmrs.User" column="retired_by"/>
        <property name="dateRetired" type="java.util.Date" column="date_retired" length="19"/>
        <property name="retireReason" type="java.lang.String" column="retire_reason" length="255"/>
        <property name="retired" type="boolean" column="retired" length="1" not-null="true"/>

        <property name="uuid" type="java.lang.String" column="uuid" length="38" unique="true"/>
    </class>

</hibernate-mapping>
